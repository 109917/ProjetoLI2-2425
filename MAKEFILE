SRC = main.c
TEST_SRC = testes.c utils.h
EXEC = jogo
TEST_EXEC = testar
CFLAGS = -Wall -Wextra -pedantic -O1 -fsanitize=address -fno-omit-frame-pointer -g --coverage
CC = gcc

all: $(EXEC)

$(EXEC): $(SRC)
	$(CC) $(CFLAGS) -o $(EXEC) $(SRC)


testar: $(SRC) $(TEST_SRC)
	$(CC) $(CFLAGS) -o $(TEST_EXEC) $(SRC) $(TEST_SRC)
	./$(TEST_EXEC)
	@gcov $(SRC) > /dev/null
	@echo "Cobertura de c√≥digo:"
	@gcov -b $(SRC) | grep -A 1 "File" | grep -v "function" || true

clean:
	rm -f $(EXEC) $(TEST_EXEC) *.gcno *.gcda *.gcov

.PHONY: all testar clean jogo

jogo: $(EXEC)
	

